from pzp.client import PzpClient

if __name__ == "__main__":
    server_base = "https://192.168.1.2"  # Replace with actual server base URL
    username = "admin"  # Replace with your username
    password = "admin"  # Replace with your password

    # Create client and login
    client = PzpClient.create_and_login(server_base, username, password)
    print("Logged in successfully")

    # Get temperatures
    print("Fetching temperatures...")
    client.print_temps(print_header=True, sep=";")

    # Logout
    client.logout()
    print("Logged out successfully")
